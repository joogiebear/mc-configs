---
// Content component - renders markdown content with styled prose
---

<div class="prose-content overflow-x-auto">
  <slot />
</div>

<style is:global>
  @reference "tailwindcss";

  .prose-content h2 {
    @apply text-lg font-bold text-white mt-0 mb-4 pb-2 border-b border-zinc-700;
  }

  .prose-content h2:not(:first-child) {
    @apply mt-8;
  }

  .prose-content h3 {
    @apply text-base font-semibold text-emerald-400 mt-6 mb-2;
  }

  .prose-content ul {
    @apply list-disc list-inside space-y-1.5 text-zinc-300 my-3;
  }

  .prose-content ol {
    @apply list-decimal list-inside space-y-1.5 text-zinc-300 my-3;
  }

  .prose-content li {
    @apply text-sm leading-relaxed;
  }

  .prose-content p {
    @apply text-zinc-400 text-sm my-3 leading-relaxed;
  }

  .prose-content code {
    @apply bg-zinc-800 text-emerald-400 px-1.5 py-0.5 rounded text-xs font-mono;
  }

  .prose-content pre {
    @apply bg-zinc-800 border border-zinc-700 rounded-lg p-4 my-4 overflow-x-auto;
  }

  .prose-content pre code {
    @apply bg-transparent p-0 text-zinc-300;
  }

  /* Table styling */
  .prose-content table {
    @apply w-full my-4 text-sm border-collapse rounded-lg overflow-hidden border border-zinc-700;
  }

  .prose-content thead {
    @apply bg-zinc-800;
  }

  .prose-content th {
    @apply px-4 py-3 text-left text-xs font-semibold text-emerald-400 uppercase tracking-wider;
  }

  .prose-content th:not(:last-child) {
    @apply border-r border-zinc-700;
  }

  .prose-content tbody tr {
    @apply border-t border-zinc-700/50 transition-colors;
  }

  .prose-content tbody tr:hover {
    @apply bg-zinc-800/70;
  }

  .prose-content td {
    @apply px-4 py-3 text-zinc-300;
  }

  .prose-content td:not(:last-child) {
    @apply border-r border-zinc-700/30;
  }

  .prose-content td:first-child {
    @apply font-medium text-white bg-zinc-800/30;
  }

  /* Second column (Items count) - numeric styling */
  .prose-content td:nth-child(2) {
    @apply text-emerald-400 font-mono text-center tabular-nums;
  }

  .prose-content a {
    @apply text-emerald-400 hover:text-emerald-300 underline underline-offset-2;
  }

  .prose-content strong {
    @apply text-white font-semibold;
  }

  .prose-content hr {
    @apply border-zinc-700 my-6;
  }
</style>
