---
// Changelog component - renders markdown content with styled headings and lists
---

<div class="changelog">
  <slot />
</div>

<style is:global>
  @reference "tailwindcss";

  .changelog h2 {
    @apply text-xl font-bold text-white mt-0 mb-4;
  }

  .changelog h3 {
    @apply text-base font-semibold text-emerald-400 mt-6 mb-2;
  }

  .changelog ul {
    @apply list-disc list-inside space-y-1 text-zinc-300;
  }

  .changelog li {
    @apply text-sm;
  }

  .changelog p {
    @apply text-zinc-400 text-sm;
  }
</style>
