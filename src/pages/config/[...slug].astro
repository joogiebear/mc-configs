---
import { getCollection, render } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import DownloadButton from '../../components/DownloadButton.astro';
import Changelog from '../../components/Changelog.astro';

export async function getStaticPaths() {
  const configs = await getCollection('configs');
  return configs.map((config) => ({
    params: { slug: config.id },
    props: { config },
  }));
}

const { config } = Astro.props;
const { Content } = await render(config);

const formattedDate = config.data.lastUpdated.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

// Build download paths - files are stored relative to the content folder
// We'll copy them to public during build or serve them from a different location
const downloadBasePath = `/downloads/${config.id}`;
---

<Layout title={config.data.title} description={config.data.description}>
  <div class="mb-6">
    <a href="/" class="inline-flex items-center gap-1 text-sm text-zinc-400 hover:text-emerald-400 transition-colors">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to all configs
    </a>
  </div>

  <div class="grid gap-6 lg:grid-cols-3">
    <!-- Main content (appears first on mobile) -->
    <div class="lg:col-span-2 lg:order-2 order-1">
      <!-- Header -->
      <div class="rounded-lg border border-zinc-800 bg-zinc-800/50 p-6 mb-6">
        <h1 class="text-2xl font-bold text-white md:text-3xl">
          {config.data.plugin}
        </h1>
        <p class="mt-3 text-zinc-400 leading-relaxed">
          {config.data.description}
        </p>
      </div>

      <!-- Content -->
      <div class="rounded-lg border border-zinc-800 bg-zinc-800/50 p-6">
        <Changelog>
          <Content />
        </Changelog>
      </div>
    </div>

    <!-- Sidebar with metadata (appears second on mobile, first on desktop) -->
    <div class="lg:col-span-1 lg:order-1 order-2 space-y-4 lg:sticky lg:top-8 lg:self-start">
      <!-- Info Card -->
      <div class="rounded-lg border border-zinc-800 bg-zinc-800/50 p-5">
        <div class="flex items-center gap-3 mb-4">
          <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-emerald-500/10">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <div>
            <span class="text-xs text-zinc-500 uppercase tracking-wider">Config Pack</span>
            <p class="text-sm font-medium text-white">{config.data.category}</p>
          </div>
        </div>

        <div class="space-y-3 text-sm">
          <div class="flex items-center justify-between py-2 border-t border-zinc-700/50">
            <span class="text-zinc-500">Version</span>
            <span class="font-medium text-emerald-400">v{config.data.version}</span>
          </div>
          <div class="flex items-center justify-between py-2 border-t border-zinc-700/50">
            <span class="text-zinc-500">Minecraft</span>
            <span class="font-medium text-white">{config.data.minecraftVersion}</span>
          </div>
          <div class="flex items-center justify-between py-2 border-t border-zinc-700/50">
            <span class="text-zinc-500">Updated</span>
            <span class="font-medium text-white">{formattedDate}</span>
          </div>
          <div class="flex items-center justify-between py-2 border-t border-zinc-700/50">
            <span class="text-zinc-500">Files</span>
            <span class="font-medium text-white">{config.data.files.length}</span>
          </div>
        </div>
      </div>

      <!-- Download Card -->
      <div class="rounded-lg border border-zinc-800 bg-zinc-800/50 p-5">
        <h2 class="text-sm font-semibold text-white uppercase tracking-wider mb-4 flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
          </svg>
          Downloads
        </h2>
        <div class="flex flex-col gap-2">
          {config.data.files.map((file) => (
            <DownloadButton
              name={file.name}
              href={`${downloadBasePath}/${file.name}`}
            />
          ))}
        </div>
      </div>
    </div>
  </div>
</Layout>
